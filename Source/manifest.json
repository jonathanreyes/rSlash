{
  "manifest_version": 2,
  "name": "rSlash",
  "description": "Use the shortcut \"r <sub>\" in the omnibox to quickly navigate to reddit.com/r/<sub>",
  "version": "0.2",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["tabs"],
  "browser_action": {
    //"default_icon": "icon.png",
    "default_title": "rSlash"
  },
  "omnibox": { "keyword" : "r" }
}